{% if collectd_plugin_hugepages_interval is not defined %}
LoadPlugin hugepages
{% else %}
<LoadPlugin hugepages>
   Interval {{ collectd_plugin_hugepages_interval }}
</LoadPlugin>
{% endif %}

<Plugin "hugepages">
  ReportPerNodeHP {{ collectd_plugin_hugepages_report_per_node_hp | string | lower }}
  ReportRootHP {{ collectd_plugin_hugepages_report_root_hp | string | lower }}
  ValuesPages {{ collectd_plugin_hugepages_values_pages | string | lower }}
  ValuesBytes {{ collectd_plugin_hugepages_values_bytes | string | lower }}
  ValuesPercentage {{ collectd_plugin_hugepages_values_percentage | string | lower }}
</Plugin>
