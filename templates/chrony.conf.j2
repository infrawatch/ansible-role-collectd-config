{% if collectd_plugin_chrony_interval is not defined %}
LoadPlugin chrony
{% else %}
<LoadPlugin chrony>
   Interval {{ collectd_plugin_chrony_interval }}
</LoadPlugin>
{% endif %}

<Plugin chrony>
{% if collectd_plugin_chrony_host is defined %}
  Host "{{ collectd_plugin_chrony_host }}"
{% endif %}
{% if collectd_plugin_chrony_port is defined %}
  Port "{{ collectd_plugin_chrony_port }}"
{% endif %}
{% if collectd_plugin_chrony_timeout is defined %}
  Timeout "{{ collectd_plugin_chrony_timeout }}"
{% endif %}
</Plugin>
