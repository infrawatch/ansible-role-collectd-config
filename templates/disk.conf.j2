{% if collectd_plugin_disk_interval is not defined %}
LoadPlugin disk
{% else %}
<LoadPlugin disk>
   Interval {{ collectd_plugin_disk_interval }}
</LoadPlugin>
{% endif %}

<Plugin "disk">
{% for disk in collectd_plugin_disk_disk %}
  Disk "{{ disk }}"
{% endfor %}
  IgnoreSelected {{ collectd_plugin_disk_ignoreselected | string | lower }}
{% if collectd_plugin_disk_udevnameattr is defined %}
  UdevNameAttr "{{ collectd_plugin_disk_udevnameattr }}"
{% endif %}
</Plugin>
